<script type="text/ng-template" id="modalOkCancel.html">
    <div class="modal-header">
        <h3 class="modal-title">
            <i class="fa {{data.iconoTituloModal}}"></i>
            <span class="modal-title" ng-bind-html="deliberatelyTrustDangerousSnippet(data.titulo)"></span>
        </h3>
    </div>
    <div class="modal-body" ng-bind-html="deliberatelyTrustDangerousSnippet(data.mensaje)">
    </div>
    <div class="modal-footer">
        <button ng-class="{'btn btn-outline':(data.aplicarOutline), 'btn btn-primary':(!data.aplicarOutline)}" type="button" ng-click="onOk()">Aceptar</button>
        <button ng-class="{'btn btn-outline':(data.aplicarOutline), 'btn btn-warning':(!data.aplicarOutline)}" type="button" ng-click="onCancel()">Cancelar</button>
    </div>
</script>

